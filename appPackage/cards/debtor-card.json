{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.5",
  "body": [
    {
      "type": "Container",
      "$data": "${$root}",
      "items": [
        {
          "type": "ColumnSet",
          "columns": [
            {
              "type": "Column",
              "width": "stretch",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "${if(RelationName, RelationName, 'Onbekende relatie')}",
                  "weight": "Bolder",
                  "size": "Medium",
                  "wrap": true
                },
                {
                  "type": "TextBlock",
                  "text": "Factuur: ${if(Reference, Reference, SalesInvoiceId)}",
                  "spacing": "None",
                  "isSubtle": true,
                  "wrap": true
                }
              ]
            },
            {
              "type": "Column",
              "width": "auto",
              "items": [
                {
                  "type": "TextBlock",
                  "text": "${if(Age > 90, 'ðŸ”´', if(Age > 60, 'ðŸŸ ', if(Age > 30, 'ðŸŸ¡', 'ðŸŸ¢')))}",
                  "size": "Large"
                }
              ]
            }
          ]
        },
        {
          "type": "FactSet",
          "facts": [
            {
              "title": "Openstaand",
              "value": "â‚¬ ${if(OutstandingAmount, formatNumber(OutstandingAmount, 2), '0,00')}"
            },
            {
              "title": "Leeftijd",
              "value": "${if(Age, Age + ' dagen', 'n.v.t.')}"
            },
            {
              "title": "Vervaldatum",
              "value": "${if(DueDate, formatDateTime(DueDate, 'dd-MM-yyyy'), 'n.v.t.')}"
            },
            {
              "title": "Eigenaar",
              "value": "${if(OwnerName, OwnerName, 'n.v.t.')}"
            }
          ]
        }
      ]
    }
  ]
}
